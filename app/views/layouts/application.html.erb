<!DOCTYPE html>
<html>
  <head>
    <title>Cardsapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "shared/nav" %>
    <div class="container">
      <div id="flash_messages"><%= flash_messages(:close, :fade, :heading) %></div>
    </div>
    <div class="container">

      <%= yield %>
    </div>

    <%= render "shared/footer" %>
  </body>
</html>
